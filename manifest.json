{
  "manifest_version": 3,
  "name": "AI Code Review Comment Formatter",
  "version": "1.0.0",
  "description": "Format and enhance AI-generated code review comments for better readability.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/format-comments.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}